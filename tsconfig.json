{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib",
    "target": "ES5",
    "lib": [
      "ES5",
      "ES2015.Core",
      "ES2015.Promise",
      "ES2015.Collection"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
