{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2015",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
